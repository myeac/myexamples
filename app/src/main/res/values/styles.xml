<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BackButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="BaseText">
        <item name="android:fontFamily">@font/pf_din_display_pro_regular</item>
        <item name="android:textColor">@color/baseTitleTextColor</item>
    </style>

    <style name="FragmentTitleText" parent="BaseText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:textSize">34sp</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="layout_goneMarginTop">24dp</item>
    </style>

    <!--Trip Details-->
    <style name="TripDetailsSubTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/pf_din_display_pro_regular</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/baseTitleTextColor</item>
    </style>

    <style name="TripDetailsStatusOk">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/status_ok</item>
    </style>

    <style name="TripDetailsStatusError">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/status_error</item>
    </style>

    <style name="TripDetailsTime">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/trip_details_time</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/baseSubtitleTextColor</item>
    </style>

    <style name="TripDetailsContent.LinearLayout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TripDetailsContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/baseTitleTextColor</item>
    </style>

    <style name="TripDetailsContent.MoreText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/baseTitleTextColor</item>
    </style>

</resources>
